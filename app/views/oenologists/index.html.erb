<p id="notice"><%= notice %></p>

<h1>Oenologists</h1>

<table class="table">
  <thead class="table table-secondary">
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Nacionalidad</th>
      <th>Revista</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oenologists.each do |oenologist| %>
      <tr>
        <td><%= oenologist.name %></td>
        <td><%= oenologist.age %></td>
        <td><%= oenologist.nationality %></td>
        <td><%= oenologist.magazine_name %></td>
        <td><%= oenologist.job_name %></td>
        <td><%= link_to 'Ver', oenologist %></td>
        <td><%= link_to 'Editar', edit_oenologist_path(oenologist) %></td>
        <td><%= link_to 'Eliminar', oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

