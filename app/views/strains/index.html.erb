<p id="notice"><%= notice %></p>

<h1 class= "title text-center"><strong>Strains</strong></h1>

<table class="table">
  <thead class="table table-danger">
    <tr>
      <th>Nombre</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strains.each do |strain| %>
      <tr>
        <td><%= strain.name %></td>
        <td><%= strain.availability %></td>
        <td><%= link_to 'Ver', strain %></td>
        <td><%= link_to 'Editar', edit_strain_path(strain) %></td>
        <td><%= link_to 'Eliminar', strain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

